<% content_for :title do %>
  Edit account - Members Only!
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "devise", data: { turbo_track: "reload" } %>
<% end %>

<% content_for :header_nav do %>
  <nav>
    <ul>
      <li><%= link_to "Back", root_path %></li>
    </ul>
  </nav>
<% end %>

<main>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form user-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name do |label| %>
        <%= label %>
        <%= f.text_field :name, autocomplete: "username" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :email do |label| %>
        <%= label %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <% end %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password do |label| %> 
        <%= label %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      <% end %>
      <div class="observation">
        <em>(leave blank if you don't want to change it)</em>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation do |label| %>
        <%= label %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :current_password do |label| %> 
        <%= label %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      <% end %>
      <div class="observation">
        <em>(we need your current password to confirm your changes)</em>
      </div>
    </div>

    <div class="actions">
      <%= f.button "Update" %>
    </div>

    <hr>

    <div class="cancel-user-wrapper">
      Unhappy?
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </div>
  <% end %>
</main>
