<% content_for :title do %>
  Sign up - Members Only!
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "devise", data: { turbo_track: "reload" } %>
<% end %>

<% content_for :header_nav do %>
  <nav>
    <ul>
      <li><%= link_to "Back", root_path %></li>
    </ul>
  </nav>
<% end %>

<main>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form user-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name do |label| %>
        <%= label %>
        <%= f.text_field :name, autocomplete: "username", required: true %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :email do |label| %>
        <%= label %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email, required: true" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password do |label| %>
        <%= label %>
        <%= f.password_field :password, autocomplete: "new-password, required: true" %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation do |label| %>
        <%= label %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password, required: true" %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.button "Sign up" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</main>
